@model IEnumerable<InvoiceItemMVCApp.Models.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>Fakture</h2>

<p>
    @Html.ActionLink("Nova faktura", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceNumber)
