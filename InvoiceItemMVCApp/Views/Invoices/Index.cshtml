            @Html.DisplayFor(modelItem => item.ItemTotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceTotalPriceWithTax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceCreator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceCustomer)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.InvoiceId }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.InvoiceId }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.InvoiceId })
        </td>
    </tr>
